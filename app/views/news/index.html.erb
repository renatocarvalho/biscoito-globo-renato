<h1>Notícias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Título</th>
      <th>Subtítulo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @news.each do |news| %>
    <tr>
      <td><%= news.title %></td>
      <td><%= news.subtitle %></td>
      <td>
        <div class="btn-group">          
          <%= link_to 'Detalhes', news, class: 'btn btn-small' %>
          <%= link_to 'Editar', edit_news_path(news), class: 'btn btn-small' %>
          <%= link_to 'Excluir', news, method: :delete, class: 'btn btn-small btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Cadastrar', new_news_path, class: 'btn btn-primary btn-large' %>
